<% content_for :sidebar_right do %>
	<div class='sidebar_search'>
		<form method='get' action='<%= service_url(search_path) %>'>
			<%= text_field_tag 'query', params[:query], :placeholder => 'Поиск по тлогам', :type => :search, :autosave => "com.tlogs", :results => 10 %>
		</form>
	</div>	
	<%= render(:partial => 'globals/tastyradio') if params[:action] == 'live' || params[:action] == 'last' || (params[:controller] == 'main' && params[:action] == 'index') %>
	<%= render(:partial => 'globals/dfp240x400') if params[:action] == 'news' || params[:action] == 'last' || params[:action] == 'live'  || params[:controller] == 'anonymous' %>
	
	<% if params[:controller] == 'search' && @users %>
	  <h2><span>Пользователи</span></h2>

  	<div class='users'>
  		<% @users.each do |user| %>
  			<div>
  				<%= link_to_tlog user, :link => :userpic, :empty => :blank %>
  				<p><%= link_to_tlog user %></p>
  			</div>
  		<% end %>	
  		
  		<%= content_tag(:p, "... и еще #{(@users.total_entries - @users.per_page).pluralize('пользователь', 'пользователя', 'пользователей', true)}") if @users.total_pages > 1 %>
  	</div>	  
	<% end %>

<% end %>
<!doctype html>
<!--[if lt IE 7 ]> <html class="no-js ie6" lang="ru"> <![endif]-->
<!--[if IE 7 ]>    <html class="no-js ie7" lang="ru"> <![endif]-->
<!--[if IE 8 ]>    <html class="no-js ie8" lang="ru"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html class="no-js" lang="ru"> <!--<![endif]-->
<head>
	<%= render :partial => 'globals/head' %>
	<%= render :partial => 'globals/dfp_head' %>
</head>
<body class="main_page">
	<div class="logo">
		<%= link_to_if (params[:controller] != 'main' || params[:action] != 'index'), image_tag(current_service.logo, :alt => current_service.name, :class => 'logo_img'), service_url('/'), :class => 'logo_link' %>
	</div>	
	<div class="register_enter">
		<% if current_user %>
			<div class='top_hello'>
					Будьте собой, <%= link_to_tlog(current_user, :link => :username) %>!
			</div>
		<% else %>
		  <div class='top_hello'>
		    Хватит быть никем, <%= link_to 'зарегистрируйтесь', service_url(login_path) %>.
		  </div>
		<% end %>
		
		<div class='top_menu'>
			<ul>
			  <%-
			    news = User.find_by_url 'news'
			    news_count = news.new_entries_count_for(current_user)
			  -%>
				<%#= menu_item 'О проекте', :about, %w(main/about main/users main/new_users) %>
				<%= menu_item "Новости#{"<sup>+#{news_count}</sup>" unless news_count.zero?}", :news if !news_count.zero? || params[:action] == 'news' %>
				<%#= menu_item 'Люди', :new_users, %w(main/users main/new_users) %>
				<%= menu_item 'Лучшее', :last %>
				<%= menu_item 'Анонимки', :anonymous, %w(anonymous/*) %>
				<%= menu_item "Моё", :my, %w(main/my main/last_personalized) if current_user %>
				<%= menu_item 'Прямой эфир', :live %>
				<%= menu_item "День из жизни", :random %>
			</ul>
		</div>
	</div>
	
	<div id='wrapper'>
		<% sidebar_left = capture do %><%= yield :sidebar_left %><% end %>
		<% unless sidebar_left.blank? %>
			<div class='sidebar_holder'>
				<div class='sidebar<%= ' sidebar_left_short' if @sidebar_left_short %>'>
					<div class="personal round">
						<div class='content'>
							<%= sidebar_left %>
						</div>
					</div>
				</div>
			</div>
		<% end %>

		<% sidebar_right = capture do %><%= yield :sidebar_right %><% end %>
		<% unless sidebar_right.blank? %>
			<div class='sidebar_holder'>
				<div class='sidebar sidebar_right'>
					<div class="personal round">
						<div class='content'>
							<%= sidebar_right %>
						</div>
					</div>
				</div>
			</div>
		<% end %>

		<div class="main_rounded_holder">
			<div class="rounded_main_center">
				<%= yield %>
			</div>
		</div>
	</div>
	
	<%= render :partial => 'globals/foot' %>

	<%= render :partial => 'globals/top_nav' %>
	
	<% if RAILS_ENV == 'production' && false %>
  	<script type="text/javascript" language="JavaScript" src="http://reformal.ru/tab.js?title=mmm+tasty&domain=tlogs&color=8f8f8f&align=left&charset=utf-8&ltitle=&lfont=&lsize=&waction=0&regime=0"></script>
	<% end %>
</body>
</html>