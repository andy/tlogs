<%
  alt = entry.data_part_2.blank? ? nil : h(truncate(strip_tags(entry.data_part_2), 50))
%>
<%# если картинка ссылкой на удаленный ресурс %>
<% if entry.data_part_1 %>
  <%= image_tag resized_image_path(entry.data_part_1, 450), { :title => '', :alt => alt }.merge(entry.geometry) %>  
<% elsif !entry.attachments.empty? %>
  <%
    image = entry.attachments.first
    thumb = image.thumbnails.select { |i| i.thumbnail == 'tlog' }.first
  %>
  <% if thumb %>
    <%= link_to image_tag(thumb.public_filename, { :title => '', :alt => alt }.merge(entry.geometry(:image => thumb))), image_path(image.public_filename), :rel => 'follow', :class => 'fancybox' %>
  <% else %>
    <%= image_tag image.public_filename, { :title => '', :alt => alt }.merge(entry.geometry) %>
	<% end %>
<% end %>

<%= content_tag :div, link_to(truncate(entry.data_part_3, :length => 50), entry.data_part_3, :rel => 'nofollow'), :class => 'pic_link' unless entry.data_part_3.blank? %>
<%= content_tag :div, white_list_entry(entry.data_part_2), :class => 'pic_comment' unless entry.data_part_2.blank? %>
