<%
	mini ||= false unless local_assigns.has_key?(:mini) && mini
	text = entry.data_part_2.blank? ? (h(truncate(entry.data_part_1, :length => (mini ? 25 : 30)))) : h(entry.data_part_2)
%>
<% if embed %>
  <%= content_tag(:h2, link_to(text, entry.data_part_1, :rel => 'nofollow', :target => '_blank')) %>
  <%= content_tag(:div, white_list_entry(entry.data_part_3)) if entry.data_part_3 %>
<% else %>
<a href="<%= h entry.data_part_1 %>" target="_blank" rel="nofollow" class="big_link"><%= text %></a>
<%= white_list_entry(entry.data_part_3) if entry.data_part_3 %>
<% end %>