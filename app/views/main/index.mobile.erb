<%-
  news = User.find_by_url 'news'
  news_count = news.new_entries_count_for(current_user)
  news_count = 15
-%>
<div data-role="content">
  <ul data-role="listview" data-inset="true">
    <li data-role="list-divider">Общее</li>
    <li><%= link_to 'Прямой эфир', main_url(:action => :live) %></li>
    <li><%= link_to 'Лучшее', main_url(:action => :last) %></li>
    <li><%= link_to 'Анонимки', main_url(:action => :anonymous) %></li>
    <!-- <li><%#= link_to "Новости#{content_tag(:span, news_count, :class => 'ui-li-count') unless news_count.zero?}" %></li> -->

    <li data-role="list-divider">Личное</li>
    <% if current_user %>
      <li><%= link_to 'Моё', main_url(:action => :my) %></li>
      <li><%= link_to 'Мой тлог', user_url(current_user) %></li>
      <li><%= link_to 'Друзья', main_url(:action => :fl) %></li>
    <% else %>
      <li><%= link_to 'Войти', main_url(login_path) %></li>
    <% end %>
  </ul>
</div>
<% content_for :header_r do %>
  <%= link_to 'Обновить', '', 'data-icon' => 'refresh', 'data-iconpos' => 'notext', :class => 't-btn-refresh-main' %>
<% end %>