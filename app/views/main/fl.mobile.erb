<div data-role="content" data-theme="d">
  <ul data-role='listview' data-filter="true">
    <% current_user.all_friends.each do |user| %>
      <li>
        <%#= avatar_tag(user) %>
        <%= link_to "#{avatar_tag(user, :blank => true)}#{user.url}", user_url(user) %>
        <% if user.last_viewed_entries_count.to_i != user.entries_count_for(current_user) %>
  				<span class='ui-li-count'>+<%= user.entries_count_for(current_user) - user.last_viewed_entries_count.to_i %></span>
  			<% end %>
      </li>
    <% end %>    
  </ul>
</div>
<div data-role="footer">
</div>
<% content_for :header_r do %>
  <%= link_to 'Обновить', '', 'data-icon' => 'refresh', 'data-iconpos' => 'notext', :class => 't-btn-refresh-fl' %>
<% end %>

