<% content_for :head do %>
  <%= auto_discovery_link_tag(:rss, service_url(main_feed_path(:action => :live))) %>
<% end %>
<div class='onair t-iscrollable' data-iscroll-next="<%= @entries.present? ? @entries.last.id : '' %>" data-iscroll-name='live'>
  <% if @entries.blank? %>
    <div class='emptiness'>
      <h1>Тут ничего нет</h1>
      <p>К сожалению, не найдено ни одной записи, которую мы могли бы вам показать.</p>
      <p>Скорее всего потому, что вы докрутили до самого конца.</p>
      <p>Вернуться на первую страницу <%= link_to 'прямого эфира &rarr;', main_path(:action => :live) %></p>
    </div>
  <% else %>
    <% @entries.each do |entry| %>
      <%= render :partial => 'entries/entry_display', :locals => { :entry => entry, :show_comments_bubble => true, :show_username => true, :show_nsfw_sticker => true, :show_tags => false, :comment_views => @comment_views } %>
    <% end %>

    <%= infinite_paginate @entries.last.id %>
  <% end %>
</div>
<% content_for :sidebar_right_below do %>
  <h2><span>Интересные люди</span></h2>
  <div class='users_mosaic' id='users_mosaic'>
    <% User.active_for(current_user, :limit => 16).each do |user| %>
      <% content_tag :div, :class => 'image', :title => h(user.url) do %>
        <%= link_to userpic_tag(user, :width => 32, :height => 32, :blank => true), user_url(user) %>
      <% end %>
    <% end %>
  </div>
  
  <script type='text/javascript'>
    jQuery(document).ready(function() {
      var mosaic = jQuery('#users_mosaic');
      mosaic.imagesLoaded(function() {
        mosaic.find('.image[title]').twipsy({ delayIn: 1000 });
        mosaic.fadeIn();
        mosaic.masonry({ itemSelector: '.image', columnWidth: 20 });
      });
    });
  </script>
<% end if false && in_beta? %>