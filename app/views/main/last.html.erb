<% @title = EntryRating::RATINGS[@filter.rating.to_sym][:header] %>
<% content_for :head do %>
	<!-- content_for :head -->
	<%= auto_discovery_link_tag(:rss, service_url(main_feed_last_path(:rating => @filter.rating, :kind => @filter.kind))) %>
	<!-- /content_for :head -->
<% end %>

<div class='filter'>
	<!-- <h2><%= EntryRating::RATINGS[@filter.rating.to_sym][:header] %></h2> -->
	<form method='get' action='<%= main_url(:action => 'last_redirect') %>'>
		<%= select :filter, :rating, EntryRating::RATINGS_FOR_SELECT %>
		<%= select :filter, :kind, Entry::KINDS_FOR_SELECT %>
		<%= submit_tag "обновить", :name => nil, :class => 'button_1' %>
	</form>
</div>

<% if @entry_ratings.blank? %>
	<p class='last_is_empty_note'>
		По вашему запросу не было найдено ни одной записи.
	</p>
<% else %>
	<div class='onair'>
		<% @entry_ratings.each do |entry_rating| %>
			<%= render :partial => 'entries/entry_display', :locals => { :entry => entry_rating.entry, :show_comments_bubble => true, :show_username => true } %>
		<% end %>

		<%= paginate @entry_ratings, :reverse => true, :url_options => { :kind => @filter.kind, :rating => @filter.rating } %>	
	</div>
	
	<script type='text/javascript'>
  // <[!CDATA[
  	<%= "var comments_views_update = #{@comment_views.to_json(:only => [:id, :comments_count], :methods => [:last_comment_viewed])}" if @comment_views %>
  //	]]>
  </script>
<% end %>