<% @title = "Прямой эфир как он есть" %>

<div class='t-entries'>
<% @entries.each do |entry| %>

  <div class='t-entry-header'>
    <%= link_to entry.author.url, user_url(entry.author) %>
  </div>

  <%= content_tag :div, render(:partial => 'entries/entry_display', :locals => { :entry => entry }) %>

  <div class='ui-bar ui-bar-c'>
    <div data-role="controlgroup" data-type="horizontal">
      <%= link_to entry.author.url, user_url(entry.author), 'data-role' => 'button', 'data-icon' => 'arrow-r', 'data-iconpos' => 'right' %>
      <%= link_to entry.comments_count.pluralize('комментарий', 'комментария', 'комментариев', true), user_url(entry.author, entry_path(entry)), 'data-role' => 'button', 'data-icon' => 'plus', 'data-iconpos' => 'right' %>
      <%= link_to 'fave', '#', 'data-role' => 'button', 'data-icon' => 'star', 'data-iconpos' => 'right' %>
    </div>
  </div>
  
  <div>&nbsp;</div>
<% end %>
</div>

<script type='text/javascript'>
  $('div.t-entry').live('taphold', function(event, ui) {
    alert('taphold on here');
  });
</script>