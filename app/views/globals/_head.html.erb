<%-
  disable_css ||= false unless local_assigns.has_key?(:disable_css) && disable_css
  enable_mobile ||= false unless local_assigns.has_key?(:enable_mobile) && enable_mobile
-%>
<meta name="robots" content="index,follow">
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<%= tag :link, :rel => 'search', :href => service_url('/opensearch.xml'), :title => 'Тейсти', :type => 'application/opensearchdescription+xml' %>
<!-- <meta name="viewport" content="width=device-width, initial-scale=1.0"> -->

<!-- apple & handheld devices configuration -->
<link rel="apple-touch-icon-precomposed" sizes="114x114" href="/apple-touch-icon-114x114-precomposed.png">
<link rel="apple-touch-icon-precomposed" sizes="72x72" href="/apple-touch-icon-72x72-precomposed.png">
<link rel="apple-touch-icon-precomposed" href="/apple-touch-icon-precomposed.png">
<link rel="apple-touch-startup-image" href="/apple-startup.png">
<meta name="apple-mobile-web-app-status-bar-style" content="black">

<link rel="shortcut icon" href="/favicon.ico">
<meta http-equiv="imagetoolbar" content="no">
<meta name="generator" content="<%= current_service.url %>">

<!--[if lte IE 6]><%= javascript_include_tag 'ie-warning' %><script>window.onload=function(){e("/images/ie-warning/")}</script><![endif]-->

<script type='text/javascript'>
  var current_user = <%= current_user ? current_user.id : 0 %>;
  <% if current_user %>
  var _user = <%= {
        :id   => current_user.id,
        :url  => current_user.url
        # :sid  => cookies[ActionController::Base.session_options[:key]]
      }.to_json %>;
  <% end %>
  
  /* validations */
  window._token = "<%= form_authenticity_token %>";
</script>

<%= render :partial => 'globals/gajs' %>

<% if !disable_css %>
<%= glued_stylesheet_link_tag 'application' %>
<!--[if IE]> <%= glued_stylesheet_link_tag 'application', 'ie' %> <![endif]-->
<%= glued_stylesheet_link_tag 'tlog' if current_site %>
<% end %>

<%= glued_javascript_include_tag 'application' %>

<%= content_tag(:title, [h(current_site ? h(current_site.url) : current_service.name), strip_tags(@title)].reject(&:blank?).join(' – ')) if @title %>

<%= yield :head %>