<div class='rel' id='pref_friends_rel'><div id='pref_friends'><div id='pref_friends_i'>
	<% current_user.all_friends.each do |user| %>
		<div class='pref_friends_user<%= " pref_friendship_status_#{user.friendship_status}" %>' id='<%= user.dom_id(:rel_div) %>'>
			<a href='<%= user_url(user) %>' class='pref_link_tlog' id='<%= user.dom_id(:rel_link) %>' onclick='ga_event("Userbar", "Friend", "<%= user.url %>")};'><%= h user.url %></a>
			<% if user.last_viewed_entries_count.to_i != user.entries_count_for(current_user) %>
				<span class='pref_new_entry' title='количество новых записей'>+<%= (user.entries_count_for(current_user) - user.last_viewed_entries_count.to_i).abs %></span>
			<% end %>
		</div>
	<% end if false %>
	<div class='pref_friends_control'>
		<%= link_to '&nbsp; настроить', user_url(current_user, settings_social_path), :class => 'pref_ctl_settings', :title => 'тонкие настройки списка друзей' %>
	</div>
</div></div></div>