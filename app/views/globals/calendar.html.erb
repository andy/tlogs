<% prev_year = nil %>
<% calendar.each do |day, entries| %>
  <%= content_tag :span, entries.first.created_at.year, :class => 'year' unless entries.first.created_at.year == prev_year %>
  <%- prev_year = entries.first.created_at.year -%>
	<span class='month'><%= day.to_rmonth_s.capitalize %></span>
	<% entries.each do |entry| %>
		<%= link_to "#{entry.created_at.day}", current_site ? user_url(current_site, day_path(:year => entry.created_at.year, :month => entry.created_at.month, :day => entry.created_at.mday, :only_path => true)) : { :entry_id => entry.id }, :class => entry.created_at.same_day?(time) ? 'day highlight' : 'day' %>
	<% end %>
<% end %>