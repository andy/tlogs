<script type='text/javascript'>
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-1562460-1']);
  _gaq.push(['_setDomainName', <%= current_service.cookie_domain.to_json %>]);
  // _gaq.push(['_setCustomVar', 1, 'Viewport', 'Desktop', 1]);
  _gaq.push(['_setCustomVar', 2, 'User Type', <%= current_user ? '"Logged in"' : '"Anonymous"' %>, 2]);
  _gaq.push(['_setCustomVar', 3, 'Service', '<%= current_service.domain %>', 3]);
  _gaq.push(['_setCustomVar', 4, 'Premium', <%= is_premium? ? '"true"' : '"false"' %>, 1]);
  _gaq.push(['_trackPageview']);
  _gaq.push(['_trackPageLoadTime']);

  window._ya_params = <%= {
    :anonymous  => !current_user,
    :service    => current_service.domain,
    :premium    => is_premium?,
    :gender     => current_user ? current_user.gender('male', 'female') : 'unknown'
  }.to_json %>;
</script>
