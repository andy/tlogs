<%
  background_url = current_site.tlog_design_settings.background_url if current_site
  background_url ||= '/images/bg_bg_2.gif'

%>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
  <title>404 – страница не существует</title>
	<style type="text/css">
		body { margin: 0; padding: 0; background: url(<%= background_url %>); }
		.dialog { width: 500px; margin: 100px auto; background: white; padding: 20px; }
		h1 { font-family: 'Trebuchet MS', sans-serif; font-size: 20px;}
		p { font-family: 'Trebuchet MS', sans-serif; font-size: 12px; color: #666; }
		a { color: #134ebd; }
	</style>
	<script type='text/javascript'>
  	var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-1562460-1']);
    _gaq.push(['_setDomainName', '.mmm-tasty.ru']);
    _gaq.push(['_trackPageview']);
    _gaq.push(['_trackEvent', 'Error', '404', 'Page not found']);
    
    (function() {
        var ga = document.createElement('script');     ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:'   == document.location.protocol ? 'https://ssl'   : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  </script>
</head>

<body>
  <div class="dialog">
    <h1>Упс! Такой страницы не существует</h1>
    <% if current_site %>
      <p>похоже что вы перешли по старой ссылке</p>
      <p><%= link_to 'вернуться в тлог', user_url(current_site) %></p>
    <% else %>
      <p><%= link_to 'вернуться на главную', current_service.url %></p>
    <% end %>
  </div>
</body>
</html>