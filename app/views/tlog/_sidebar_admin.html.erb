<div class='sidebar_section'>
  <%= link_to_function 'Админка', "sidebar_toggle('admin')", :class => 'sidebar_toggle', :id => 'sidebar_admin_link' %>
  <div class='sidebar_section_content' id='sidebar_admin_content' style='display: none'>
    <p>
      <%= content_tag :span, "id #{current_site.id}", :title => "#{current_site.created_at.to_s(:db)}, #{current_site.created_at.distance_between_in_words(Time.now, ' назад')}" %><br />
      <%= h current_site.email %><br />
      <%= content_tag(:span, 'premium', :title => current_site.premium_till.to_s(:db)) + '<br/>' if current_site.is_premium? %>
  
      <%= link_to_remote 'Скрыть с главной', {
                        :url => user_url(current_site, admin_path(:action => 'demainpage')),
                        :before => 'blink("sidebar_admin_demainpage")',
                        :complete => 'unblink("sidebar_admin_demainpage")',
                        :confirm => 'Действительно скрыть?'
                      }, :style => (current_site.is_mainpageable? ? nil : 'display: none'), :id => 'sidebar_admin_demainpage' %>

      <%= link_to_remote 'Показывать на главной', {
                        :url => user_url(current_site, admin_path(:action => 'enablemainpage')),
                        :before => 'blink("sidebar_admin_enablemainpage")',
                        :complete => 'unblink("sidebar_admin_enablemainpage")'
                      }, :style => (current_site.is_mainpageable? ? 'display: none' : nil), :id => 'sidebar_admin_enablemainpage' %>
      
      <br/>

      <%= link_to_remote 'Удалить', {
                        :url => user_url(current_site, admin_path(:action => 'disable')),
                        :before => 'blink("sidebar_admin_remove_tlog")',
                        :complete => 'unblink("sidebar_admin_remove_tlog")',
                        :confirm => 'Действительно удалить?'
                      }, :id => 'sidebar_admin_remove_tlog' %><br />
    </p>
  </div>
</div>