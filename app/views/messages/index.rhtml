<% @title = "все #{current_site.gender('его', 'её')} сообщения#{", страница #{params[:page].to_i}" if params[:page]}" %>
<div id='tlog_messages'>
	<%= render :partial => 'message', :collection => @messages %>
</div>
<div id='message_create'></div>

<%= paginate @messages %>

<div class='return_from_permalink'>
	<%= link_to "&#x2190; обратно в #{current_site.gender("его", "её")} тлог", user_path(current_site) %>
</div>